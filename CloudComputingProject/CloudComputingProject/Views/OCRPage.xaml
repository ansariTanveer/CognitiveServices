<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CloudComputingProject.Views.OCRPage" Title="OCR Operation">
    <ContentPage.Content>
        <ScrollView Padding="10">
            <StackLayout VerticalOptions="StartAndExpand">
                <Image x:Name="ocrImage" Aspect="AspectFit" />
                <Button Text="Select Picture" Background="#ACDDDA" Clicked="Button_Clicked" />

                <Label x:Name="ocrText" FontSize="20" TextColor="#FF573C" />
            </StackLayout>
        </ScrollView>        
    </ContentPage.Content>
</ContentPage>